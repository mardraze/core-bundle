{% block subject %}
    Nowy komentarz pod wpisem "{{ comment.blog.title }}"
{% endblock %}

{% block message_html %}

<html>
    <head></head>
    <body>
    {% set button_style = 'display: inline-block;background: #0088e4;color: #fff;font-size: 17px;padding: 10px 20px;text-decoration: none;border-radius: 3px;' %}

{% block subject %}
    Nowa wiadomość wysłana z formularza kontaktowego
{% endblock %}

{% block message_html %}
    <html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    </head>
    <body>
        <table border="1" width="100%">
            {% for param, value in data %}
                <tr><td>{{ ('table_email_' ~ param)|trans }}</td><td>{{ value|nl2br }}</td></tr>
            {% endfor %}
        </table>
    </body>
    </html>
{% endblock %}

{% block message_text %}
    {% for param, value in data %}
        {{ ('table_email_' ~ param)|trans }}: {{ value }}
    {% endfor %}
{% endblock %}
